<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>MVC_PhoneBookMS</display-name>
	<welcome-file-list>
		<welcome-file>view/login.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>userController</servlet-name>
		<servlet-class>com.gwhcool.phonebook.controller.UserController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>friendController</servlet-name>
		<servlet-class>com.gwhcool.phonebook.controller.FriendController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>userController</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>friendController</servlet-name>
		<url-pattern>/friend</url-pattern>
	</servlet-mapping>
	
</web-app>