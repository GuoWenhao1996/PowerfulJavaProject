<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>PhoneBookMS</display-name>
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>servlet.user.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>servlet.user.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>addFriend</servlet-name>
		<servlet-class>servlet.friend.AddFriend</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>queryAllFriend</servlet-name>
		<servlet-class>servlet.friend.QueryAllFriend</servlet-class>
	</servlet>
	

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>addFriend</servlet-name>
		<url-pattern>/addFriend</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>queryAllFriend</servlet-name>
		<url-pattern>/queryAllFriend</url-pattern>
	</servlet-mapping>
	
</web-app>